<odoo>
    <data>
        <template id="print_rapport_journalier_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <h3 class="text-center"><span t-esc="form.get('start_date')"/> to <span t-esc="form.get('end_date')"/></h3>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    <strong>Nom de l'employé</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Arrivée</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Sortie</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Heures travaillés</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Retard</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Depart anticipé</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Heures supplémentaires</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Etat</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="form.get('attendances')" t-as="l">
                                <td class="text-right">
                                    <span t-esc="l.get('name')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('entre')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('sortie')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('worked_hours')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('late')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('depart')"/>
                                </td>
                                <td class="text-right">
                                    <!--                                    <span t-esc="l.get('supp')"/>-->
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('etat')"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </template>
    </data>
</odoo>